{
    "compilerOptions": {
      "target": "es5",
      "module": "commonjs",    
      "outDir": "./build",
      "rootDir": "./",
      "removeComments": true,
      "strict": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "resolveJsonModule": true
    },
    "include": [
      "./src", "helper.ts"
    ],
    "exclude": [
      "./build",
      "./db"
    ]
  }
  